{
  "name": "highlighter",
  "version": "1.0.0",
  "description": "Firefox extension to highlight text on websites with a simple right-click or keyboard shortcut. Saves highlights on your device.",
  "repository": "github:resamvi/highlighter",
  "license": "MIT",
  "devDependencies": {
    "@parcel/config-webextension": "^2.12.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.26.0",
    "jquery": "^2.1.3",
    "parcel": "^2.12.0"
  },
  "scripts": {
    "build": "parcel build manifest.json --config @parcel/config-webextension",
    "develop": "parcel watch manifest.json --no-hmr --config @parcel/config-webextension",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "node scripts/release.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
